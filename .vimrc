set nocompatible
syntax on
highlight Comment ctermfg=yellow
"colorscheme simple-dark
"colorscheme simple-light
set number
set autoindent
set tabstop=2 shiftwidth=2 expandtab
set showmatch
nnoremap ; :
set incsearch
set hlsearch
set ignorecase
set nowrap

set statusline=%=%f\ %m
set fillchars=vert:\ ,stl:\ ,stlnc:\ 
set laststatus=2
